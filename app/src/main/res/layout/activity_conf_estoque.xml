        app:layout_constraintBottom_toTopOf="@+id/LblDescAniversario"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/molduraIconFunc"
        app:layout_constraintTop_toBottomOf="@+id/LblNomeFuncionarioText" />
